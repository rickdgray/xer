{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "outDir": ""
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["source/*"],
    "exclude": ["node_modules"]
}